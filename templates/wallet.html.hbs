<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <link rel="stylesheet" href="/static/thirdparty/bootstrap.css">

        <title>{{wallet.name}} - puccinia</title>
    </head>
    <body class="container" onload="onload('{{wallet.id}}')">
        <h3><a href="/">puccinia</a> &gt; {{wallet.name}}</h3>

        <br/>
        <h4>Total: {{total}}</h4>

        {{#if accounts}}
            <br/>
            <h4>Accounts</h4>
            <table class="table table-bordered table-hover table-sm">
                <tbody>
                    {{#each accounts}}
                        <tr>
                            <td><a href="/account/{{../wallet.id}}/{{account.id}}">{{account.name}}</a></td>
                            <td align="right">{{total}}</td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        {{/if}}

        <br>
        <h4>Charts</h4>
        <div class="row">
            <div class="col-sm">
                <canvas id="chart_change_in_value" width="300" height="300"></canvas>
            </div>
            <div class="col-sm">
                <canvas id="chart_value" width="300" height="300"></canvas>
            </div>
        </div>
        <div class="row">
            <div class="col-sm">
                <canvas id="chart_cash_flow" width="300" height="300"></canvas>
            </div>
            <div class="col-sm">
                <canvas id="chart_net_cash_flow" width="300" height="300"></canvas>
            </div>
        </div>

        <script src="/static/thirdparty/chart.js"></script>
        <script src="/static/thirdparty/moment.js"></script>
        <script src="/static/util.js"></script>
        <script src="/static/wallet.js"></script>
    </body>
</html>
