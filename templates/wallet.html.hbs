<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <link rel="stylesheet" href="/static/thirdparty/bootstrap.css">
        <link rel="stylesheet" href="/static/style.css">

        <title>{{wallet.name}} - puccinia</title>
    </head>
    <body class="container" onload="onload('{{wallet.id}}')">
        <h3><a href="/">puccinia</a> &gt; {{wallet.name}}</h3>

        <br/>
        <h4>Total: {{total}}</h4>

        {{#if accounts}}
            <br/>
            <h4>Accounts</h4>
            <table class="table table-bordered table-hover">
                <tbody>
                    {{#each accounts}}
                        <tr>
                            <td>
                                <input type="checkbox" id="checkbox_account_id_{{account.id}}" onchange="refresh('{{../wallet.id}}')" checked/>
                                <a href="/account/{{../wallet.id}}/{{account.id}}">{{account.name}}</a>
                            </td>
                            <td align="right">{{total}}</td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        {{/if}}

        <br>
        <h4>Charts</h4>

        <div class="row">
            <div class="input-group col-sm">
                <div class="input-group-prepend">
                    <span class="input-group-text">Since</span>
                </div>
                <input id="chart_since" type="date" value="2023-01-01" class="form-control" onchange="refresh('{{wallet.id}}')"/>
                <div class="input-group-prepend">
                    <span class="input-group-text">Until</span>
                </div>
                <input id="chart_until" type="date" value="2024-12-31" class="form-control" onchange="refresh('{{wallet.id}}')"/>
            </div>
        </div>

        <div id="charts"></div>

        <script src="/static/thirdparty/moment.js"></script>
        <script src="/static/thirdparty/chart.js"></script>
        <script src="/static/thirdparty/hammer.js"></script>
        <script src="/static/thirdparty/chartjs-plugin-zoom.js"></script>
        <script src="/static/util.js"></script>
        <script src="/static/wallet.js"></script>
    </body>
</html>
