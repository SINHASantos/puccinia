<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <link rel="stylesheet" href="/static/thirdparty/bootstrap.css">
        <link rel="stylesheet" href="/static/style.css">

        <title>puccinia</title>
    </head>
    <body class="container" onload="onload()">
        <h3>puccinia</h3>

        <br/>
        <h4>Total: {{total}}</h4>

        {{#if wallets}}
            <br/>
            <h4>Wallets</h4>
            <table class="table table-bordered table-hover">
                <tbody>
                    {{#each wallets}}
                        <tr>
                            <td>
                                <input type="checkbox" id="checkbox_wallet_id_{{wallet.id}}" onchange="refresh()" checked/>
                                <a href="/wallet/{{wallet.id}}">{{wallet.name}}</a>
                            </td>
                            <td align="right">{{total}}</td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        {{/if}}

        <br>
        <h4>Charts</h4>

        <div class="row">
            <div class="input-group col-sm">
                <div class="input-group-prepend">
                    <span class="input-group-text">Since</span>
                </div>
                <input id="chart_since" type="date" value="2020-01-01" class="form-control" onchange="refresh()"/>
                <div class="input-group-prepend">
                    <span class="input-group-text">Until</span>
                </div>
                <input id="chart_until" type="date" value="2021-12-31" class="form-control" onchange="refresh()"/>
            </div>
        </div>

        <div id="charts"></div>

        <script src="/static/thirdparty/moment.js"></script>
        <script src="/static/thirdparty/chart.js"></script>
        <script src="/static/util.js"></script>
        <script src="/static/index.js"></script>
    </body>
</html>
