<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>puccinia</title>

        <link rel="stylesheet" href="/static/thirdparty/bootstrap.css" integrity="sha384-Zug+QiDoJOrZ5t4lssLdxGhVrurbmBWopoEl+M6BdEfwnCJZtKxi1KgxUyJq13dy" crossorigin="anonymous">
        <script src="/static/thirdparty/chart.js" integrity="sha256-N4u5BjTLNwmGul6RgLoESPNqDFVUibVuOYhP4gJgrew=" crossorigin="anonymous"></script>
        <script src="/static/thirdparty/moment.js" integrity="sha256-CutOzxCRucUsn6C6TcEYsauvvYilEniTXldPa6/wu0k=" crossorigin="anonymous"></script>
        <script src="/static/util.js"></script>
        <script src="/static/index.js"></script>
    </head>
    <body class="container" onload="onload()">
        <h3>puccinia</h3>

        <br/>
        <h4>Total: {{total}}</h4>

        {{#if wallets}}
            <br/>
            <h4>Wallets</h4>
            <table class="table table-bordered table-hover table-sm">
                <tbody>
                    {{#each wallets}}
                        <tr>
                            <td><a href="/wallet/{{wallet.id}}">{{wallet.name}}</a></td>
                            <td align="right">{{total}}</td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        {{/if}}

        <br>
        <h4>Charts</h4>
        <div class="row">
            <div class="col-sm">
                <canvas id="chart_change_in_value" width="300" height="300"></canvas>
            </div>
            <div class="col-sm">
                <canvas id="chart_value" width="300" height="300"></canvas>
            </div>
        </div>
        <div class="row">
            <div class="col-sm">
                <canvas id="chart_cash_flow" width="300" height="300"></canvas>
            </div>
            <div class="col-sm">
                <canvas id="chart_net_cash_flow" width="300" height="300"></canvas>
            </div>
        </div>
    </body>
</html>
