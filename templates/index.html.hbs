<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>puccinia</title>

        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/css/bootstrap.min.css" integrity="sha384-Zug+QiDoJOrZ5t4lssLdxGhVrurbmBWopoEl+M6BdEfwnCJZtKxi1KgxUyJq13dy" crossorigin="anonymous">
    </head>
    <body class="container">
        <h3>puccinia</h3>

        {{#if bank}}
            <br/>
            <h4>Banks</h4>
            <table class="table table-bordered table-hover table-sm">
                <tbody>
                    {{#each bank}}
                        <tr>
                            <td><a href="/bank/{{id}}">{{name}}</a></td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        {{/if}}

        {{#if crypto}}
            <br/>
            <h4>Crypto</h4>
            <table class="table table-bordered table-hover table-sm">
                <tbody>
                    {{#each crypto}}
                        <tr>
                            <td><a href="/crypto/{{id}}">{{name}}</a></td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        {{/if}}

        {{#if custom}}
            <br/>
            <h4>Custom</h4>
            <table class="table table-bordered table-hover table-sm">
                <tbody>
                    {{#each custom}}
                        <tr>
                            <td><a href="/custom/{{id}}">{{name}}</a></td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        {{/if}}
    </body>
</html>
